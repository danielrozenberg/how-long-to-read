{
  "root": true,
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:@typescript-eslint/stylistic-type-checked"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "es2024": true,
    "webextensions": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  }
}
